{
  "compilerOptions": {
    "listEmittedFiles": true,
    "listFiles": false,
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "typescript": "typescript/lib/typescript"
  },
  "build": { // for [ local, dist ]
    "MinCVer": [ 73, 38 ], // keep dist to be 38 : the relase version
    "MinFFVer": [ 63, 63 ],
    "BTypes": [ 3, 1 ], // [ Chrome | Firefox, Chrome ]
    "NoDialogUI": [ 1, 1 ],
    "DetectAPIOnFirefox": [1, 0],
    "CreateFakeIncognito": [0, 0],
    "NDEBUG": [ 0, 1 ]
  },
  "extends": "../tsconfig"
}