{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    // "lib": [ "dom", "es6" ],
    "listEmittedFiles": true,
    "module": "system",
    "newLine": "LF",
    "noEmitHelpers": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": false,
    "noLib": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": ".",
    "preserveConstEnums": false,
    "removeComments": true,
    "rootDir": ".",
    "skipDefaultLibCheck": false,
    "strictNullChecks": true,
    "target": "es5",
    "typeRoots": ["."],
    "types": ["types"]
  },
  "exclude": [
    ".*",
    "*.min.*",
    "dist",
    "node_modules",
    "test*",
    "weidu"
  ]
}